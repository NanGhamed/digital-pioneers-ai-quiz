            document.getElementById("qtext").textContent = qs[i].q;

            const opts = document.getElementById("opts");
            opts.innerHTML = "";

            qs[i].o.forEach((opt, index) => {
                let btn = document.createElement("button");
                btn.textContent = opt;
                btn.className =
                    "w-full bg-white text-black p-3 rounded-xl font-bold border-2 border-purple-300 transition";
                btn.onclick = () => check(index, btn);
                opts.appendChild(btn);
            });
        }

        function check(choice, btn) {
            const correct = qs[i].a;

            if (choice === correct) {
                score += 5;
                btn.classList.add("correct");
            } else {
                btn.classList.add("wrong");
            }

            i++;
            setTimeout(loadQ, 800);
        }

        function endGame() {
            document.getElementById("game").classList.add("hidden");
            document.getElementById("result").classList.remove("hidden");

            document.getElementById("rname").textContent = username;
            document.getElementById("rteam").textContent = team || "โ";
            document.getElementById("rscore").textContent = score + " / 50";
        }

        function saveScore() {
            let old = JSON.parse(localStorage.getItem("dp_leaderboard") || "[]");

            old.push({ name: username, team: team || "โ", score });

            old.sort((a, b) => b.score - a.score);

            localStorage.setItem("dp_leaderboard", JSON.stringify(old));

            showLeaderboard();
        }

        function showLeaderboard() {
            document.getElementById("result").classList.add("hidden");
            document.getElementById("leaderboard").classList.remove("hidden");

            const tb = document.getElementById("tb");
            tb.innerHTML = "";

            let list = JSON.parse(localStorage.getItem("dp_leaderboard") || "[]");

            list.forEach((x, index) => {
                tb.innerHTML += `
                    <tr class="border-b border-white/10">
                        <td class="p-2">${index + 1}</td>
                        <td class="p-2">${x.name}</td>
                        <td class="p-2">${x.team}</td>
                        <td class="p-2 text-center">${x.score}</td>
                    </tr>
                `;
            });
        }

        function goHome() {
            location.href = "../index.html";
        }
    </script>

</body>
</html>
