        let i = 0;
        let score = 0;
        let username = "";

        function startGame() {
            username = document.getElementById("name").value.trim();
            if (!username) return alert("ุงูุฑุฌุงุก ูุชุงุจุฉ ุงุณูู");

            document.getElementById("landing").classList.add("hidden");
            document.getElementById("game").classList.remove("hidden");

            loadQ();
        }

        function loadQ() {
            if (i >= qs.length) return endGame();

            document.getElementById("num").textContent = i + 1;
            document.getElementById("qtext").textContent = qs[i].q;

            const opts = document.getElementById("opts");
            opts.innerHTML = "";

            qs[i].o.forEach((opt, index) => {
                const btn = document.createElement("button");
                btn.textContent = opt;
                btn.className =
                    "w-full bg-white text-black p-3 rounded-xl font-bold border-2 border-purple-300 transition";
                btn.onclick = () => check(index, btn);
                opts.appendChild(btn);
            });
        }

        function check(choice, btn) {
            const correct = qs[i].a;

            if (choice === correct) {
                score += 5;
                btn.classList.add("bg-green-500", "text-white");
            } else {
                btn.classList.add("bg-red-500", "text-white");
            }

            i++;

            setTimeout(loadQ, 700);
        }

        function endGame() {
            document.getElementById("game").classList.add("hidden");
            document.getElementById("result").classList.remove("hidden");

            document.getElementById("rname").textContent = username;
            document.getElementById("rscore").textContent = score + " / 50";
        }
